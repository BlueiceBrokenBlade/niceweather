<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_item_icon"
        android:background="@drawable/set_notice"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/text_item_name"
        android:layout_margin="10dp"
        android:text="通知栏"
        android:layout_toRightOf="@+id/image_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_item_choosed"
        android:layout_margin="5dp"
        android:text="开启"
        android:layout_toLeftOf="@+id/image_item_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_item_forward"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/title_forword2"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</RelativeLayout>
